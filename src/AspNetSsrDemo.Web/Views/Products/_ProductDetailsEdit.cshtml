@model ProductDetailsViewModel

@using (Html.BeginForm("SaveDetails", "Products", FormMethod.Post, htmlAttributes: new { @class = "edit-product-form" }))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-row">
        @Html.LabelFor(m => m.Sku, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Sku, new { @class = "form-input" })
    </div>

    <div class="form-row">
        @Html.LabelFor(m => m.Name, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-input" })
    </div>

    <div class="form-row">
        @Html.LabelFor(m => m.Price, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Price, new
        {
            @class = "form-input",
            type = "number",
            min = "0.00",
            lang = "en"
        })
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-submit">Save</button>
        <button type="reset" class="btn btn-reset">Reset</button>
    </div>
}
